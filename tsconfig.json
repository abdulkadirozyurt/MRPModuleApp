{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "outDir": "./dist",
    "skipLibCheck": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/types/**/*.d.ts"]
}
